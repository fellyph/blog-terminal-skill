{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"color": {
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"duotone": [],
			"gradients": [
				{
					"slug": "terminal-glow",
					"name": "Terminal Glow",
					"gradient": "radial-gradient(ellipse at center, rgba(91, 236, 19, 0.15) 0%, transparent 70%)"
				},
				{
					"slug": "crt-scanline",
					"name": "CRT Scanline",
					"gradient": "repeating-linear-gradient(0deg, rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0.15) 1px, transparent 1px, transparent 2px)"
				}
			],
			"palette": [
				{
					"slug": "primary",
					"name": "Primary (Neon Green)",
					"color": "#5bec13"
				},
				{
					"slug": "primary-dark",
					"name": "Primary Dark",
					"color": "#4bc410"
				},
				{
					"slug": "secondary",
					"name": "Secondary",
					"color": "#2e3928"
				},
				{
					"slug": "background",
					"name": "Background",
					"color": "#050804"
				},
				{
					"slug": "background-alt",
					"name": "Background Alt",
					"color": "#0a0f09"
				},
				{
					"slug": "foreground",
					"name": "Foreground",
					"color": "#f6f8f6"
				},
				{
					"slug": "foreground-muted",
					"name": "Foreground Muted",
					"color": "#a8b4a8"
				},
				{
					"slug": "border",
					"name": "Border",
					"color": "#2e3928"
				},
				{
					"slug": "error",
					"name": "Error",
					"color": "#ff4444"
				},
				{
					"slug": "warning",
					"name": "Warning",
					"color": "#ffaa00"
				},
				{
					"slug": "success",
					"name": "Success",
					"color": "#5bec13"
				}
			]
		},
		"layout": {
			"contentSize": "800px",
			"wideSize": "1200px"
		},
		"spacing": {
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"slug": "10",
					"name": "1",
					"size": "0.25rem"
				},
				{
					"slug": "20",
					"name": "2",
					"size": "0.5rem"
				},
				{
					"slug": "30",
					"name": "3",
					"size": "0.75rem"
				},
				{
					"slug": "40",
					"name": "4",
					"size": "1rem"
				},
				{
					"slug": "50",
					"name": "5",
					"size": "1.5rem"
				},
				{
					"slug": "60",
					"name": "6",
					"size": "2rem"
				},
				{
					"slug": "70",
					"name": "7",
					"size": "3rem"
				},
				{
					"slug": "80",
					"name": "8",
					"size": "4rem"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"customFontSize": true,
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "'Space Grotesk', ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, 'Liberation Mono', monospace",
					"name": "Space Grotesk",
					"slug": "primary",
					"fontFace": [
						{
							"fontFamily": "Space Grotesk",
							"fontWeight": "300 700",
							"fontStyle": "normal",
							"fontDisplay": "swap",
							"src": [
								"https://fonts.gstatic.com/s/spacegrotesk/v16/V8mDoQDjQSkFtoMM3T6r8E7mPbF4Cw.woff2"
							]
						}
					]
				},
				{
					"fontFamily": "ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, 'Liberation Mono', monospace",
					"name": "Monospace",
					"slug": "monospace"
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"name": "Small",
					"size": "0.875rem",
					"fluid": {
						"min": "0.8rem",
						"max": "0.875rem"
					}
				},
				{
					"slug": "medium",
					"name": "Medium",
					"size": "1rem",
					"fluid": {
						"min": "0.9rem",
						"max": "1rem"
					}
				},
				{
					"slug": "large",
					"name": "Large",
					"size": "1.25rem",
					"fluid": {
						"min": "1.1rem",
						"max": "1.25rem"
					}
				},
				{
					"slug": "x-large",
					"name": "Extra Large",
					"size": "1.5rem",
					"fluid": {
						"min": "1.25rem",
						"max": "1.5rem"
					}
				},
				{
					"slug": "xx-large",
					"name": "2X Large",
					"size": "2rem",
					"fluid": {
						"min": "1.5rem",
						"max": "2rem"
					}
				},
				{
					"slug": "xxx-large",
					"name": "3X Large",
					"size": "3rem",
					"fluid": {
						"min": "2rem",
						"max": "3rem"
					}
				}
			],
			"lineHeight": true,
			"textDecoration": true,
			"textTransform": true,
			"letterSpacing": true,
			"writingMode": true
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"custom": {
			"spacing": {
				"outer": "var(--wp--preset--spacing--50)"
			},
			"terminal": {
				"glowColor": "rgba(91, 236, 19, 0.5)",
				"glowColorStrong": "rgba(91, 236, 19, 0.8)",
				"glowColorSubtle": "rgba(91, 236, 19, 0.2)",
				"glowStrength": "5px",
				"glowStrengthLarge": "15px",
				"scanlineOpacity": "0.15",
				"scanlineHeight": "2px",
				"cursorBlinkSpeed": "1s",
				"cursorWidth": "10px",
				"phosphorGlow": "0 0 5px var(--wp--custom--terminal--glow-color)",
				"phosphorGlowStrong": "0 0 15px var(--wp--custom--terminal--glow-color-strong)",
				"borderGlow": "0 0 10px var(--wp--custom--terminal--glow-color-subtle), inset 0 0 10px var(--wp--custom--terminal--glow-color-subtle)"
			},
			"borderRadius": {
				"none": "0",
				"small": "0.125rem",
				"medium": "0.25rem",
				"large": "0.5rem",
				"full": "0.75rem"
			},
			"stitch": {
				"projectId": "3821108124163278528",
				"syncVersion": "1.0.0"
			}
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--foreground)"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--40)",
			"padding": {
				"top": "0",
				"right": "var(--wp--preset--spacing--50)",
				"bottom": "0",
				"left": "var(--wp--preset--spacing--50)"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--primary)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"elements": {
			"button": {
				"border": {
					"radius": "var(--wp--custom--border-radius--medium)",
					"width": "1px",
					"style": "solid",
					"color": "var(--wp--preset--color--primary)"
				},
				"color": {
					"background": "transparent",
					"text": "var(--wp--preset--color--primary)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--20)",
						"right": "var(--wp--preset--spacing--40)",
						"bottom": "var(--wp--preset--spacing--20)",
						"left": "var(--wp--preset--spacing--40)"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontSize": "var(--wp--preset--font-size--small)",
					"textTransform": "uppercase",
					"letterSpacing": "0.05em"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--primary)",
						"text": "var(--wp--preset--color--background)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--primary)",
						"text": "var(--wp--preset--color--background)"
					},
					"outline": {
						"offset": "2px",
						"style": "solid",
						"width": "2px",
						"color": "var(--wp--preset--color--primary)"
					}
				}
			},
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontWeight": "700",
					"lineHeight": "1.2",
					"textTransform": "uppercase",
					"letterSpacing": "0.02em"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xxx-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"textDecoration": "none"
				},
				":hover": {
					"typography": {
						"textDecoration": "underline"
					}
				},
				":focus": {
					"outline": {
						"offset": "2px",
						"style": "solid",
						"width": "2px",
						"color": "var(--wp--preset--color--primary)"
					}
				}
			},
			"caption": {
				"color": {
					"text": "var(--wp--preset--color--foreground-muted)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			}
		},
		"blocks": {
			"core/site-title": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "700",
					"textTransform": "uppercase",
					"letterSpacing": "0.1em"
				},
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "none"
							}
						}
					}
				}
			},
			"core/navigation": {
				"color": {
					"text": "var(--wp--preset--color--foreground)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"textTransform": "uppercase",
					"letterSpacing": "0.05em"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--foreground)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--primary)"
							}
						}
					}
				}
			},
			"core/post-title": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				},
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "none"
							}
						}
					}
				}
			},
			"core/post-date": {
				"color": {
					"text": "var(--wp--preset--color--foreground-muted)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"textTransform": "uppercase"
				}
			},
			"core/post-terms": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"textTransform": "uppercase"
				}
			},
			"core/post-excerpt": {
				"color": {
					"text": "var(--wp--preset--color--foreground-muted)"
				}
			},
			"core/quote": {
				"border": {
					"color": "var(--wp--preset--color--primary)",
					"style": "solid",
					"width": "0 0 0 2px"
				},
				"spacing": {
					"padding": {
						"left": "var(--wp--preset--spacing--40)"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--foreground-muted)"
				},
				"typography": {
					"fontStyle": "italic"
				}
			},
			"core/code": {
				"border": {
					"radius": "var(--wp--custom--border-radius--medium)",
					"width": "1px",
					"style": "solid",
					"color": "var(--wp--preset--color--border)"
				},
				"color": {
					"background": "var(--wp--preset--color--background-alt)",
					"text": "var(--wp--preset--color--primary)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--40)",
						"right": "var(--wp--preset--spacing--40)",
						"bottom": "var(--wp--preset--spacing--40)",
						"left": "var(--wp--preset--spacing--40)"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--monospace)",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/preformatted": {
				"border": {
					"radius": "var(--wp--custom--border-radius--medium)",
					"width": "1px",
					"style": "solid",
					"color": "var(--wp--preset--color--border)"
				},
				"color": {
					"background": "var(--wp--preset--color--background-alt)",
					"text": "var(--wp--preset--color--primary)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--40)",
						"right": "var(--wp--preset--spacing--40)",
						"bottom": "var(--wp--preset--spacing--40)",
						"left": "var(--wp--preset--spacing--40)"
					}
				}
			},
			"core/separator": {
				"border": {
					"color": "var(--wp--preset--color--border)"
				},
				"color": {
					"text": "var(--wp--preset--color--border)"
				}
			},
			"core/search": {
				"border": {
					"radius": "var(--wp--custom--border-radius--medium)",
					"width": "1px",
					"style": "solid",
					"color": "var(--wp--preset--color--border)"
				},
				"color": {
					"text": "var(--wp--preset--color--foreground)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/group": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--40)",
						"right": "var(--wp--preset--spacing--40)",
						"bottom": "var(--wp--preset--spacing--40)",
						"left": "var(--wp--preset--spacing--40)"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "page-about",
			"title": "About",
			"postTypes": ["page"]
		},
		{
			"name": "page-contact",
			"title": "Contact",
			"postTypes": ["page"]
		}
	],
	"patterns": [
		"terminal-hero",
		"post-card",
		"terminal-window",
		"error-404",
		"search-results"
	]
}
